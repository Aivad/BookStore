@model List<BookStore.Models.Book>

@{
    ViewData["Title"] = "BookStore - Daftar Buku";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📚 Daftar Buku Tersedia</h2>

        <!-- Form Pencarian -->
        <form asp-controller="Book" asp-action="Search" method="get" class="d-flex">
            <input type="text" name="query" class="form-control me-2"
                   placeholder="Cari buku atau penulis..."
                   value="@ViewBag.SearchQuery" />
            <button type="submit" class="btn btn-outline-primary">Cari</button>
        </form>

        @if (Model == null || !Model.Any())
        {
            @if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
            {
                <div class="alert alert-info">
                    Tidak ditemukan buku dengan kata kunci: "<strong>@ViewBag.SearchQuery</strong>"
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Belum ada buku tersedia. Silahkan hubungi admin.
                </div>
            }
        }

    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            Belum ada buku tersedia. Silakan hubungi admin.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Gambar Buku -->
                        <img src="@book.ImageUrl"
                             class="card-img-top"
                             alt="@book.Title"
                             style="height: 200px; object-fit: cover;"
                             onerror="this.src='/images/default-book.jpg'" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="text-muted">Oleh <strong>@book.Author</strong></p>

                            @if (!string.IsNullOrEmpty(book.Description))
                            {
                                <p class="card-text flex-grow-1">@book.Description.Substring(0, Math.Min(book.Description.Length, 100))...</p>
                            }

                            <div class="mt-auto">
                                <p class="h5 text-success">Rp @book.Price.ToString("N0")</p>

                                <div class="d-grid gap-2">
                                    <a asp-action="Detail" asp-route-id="@book.Id" class="btn btn-outline-primary">Lihat Detail</a>
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <form asp-controller="Cart" asp-action="Add" method="post">
                                            <input type="hidden" name="bookId" value="@book.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-success w-100">Tambah ke Keranjang</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login" class="btn btn-success">Login untuk Beli</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {   
}