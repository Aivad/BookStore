@model List<BookStore.Models.Order>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Orders";
}

<h2>📦 My Order History</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You haven't placed any orders yet. <a asp-controller="Home" asp-action="Index">Start Shopping</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order #</th>   
                    <th>Payment</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.Id</td>
                        <td>@order.PaymentMethod?.Name</td>
                        <td>Rp @order.TotalAmount.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                        <td><span class="badge @(order.Status == "Pending" ? "bg-warning" : "bg-success")">@order.Status</span></td>
                        <td>
                            <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}