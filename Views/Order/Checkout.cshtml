
@model List<BookStore.Models.Cart>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<div class="row">
    <div class="col-md-8">
        <h4>Order Summary</h4>
        <table class="table">
            <thead>
                <tr><th>Book</th><th>Price</th><th>Qty</th><th>Total</th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Book.Title</td>
                        <td>Rp @item.Book.Price.ToString("N0")</td>
                        <td>@item.Quantity</td>
                        <td>Rp @(item.Book.Price* item.Quantity)</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">Total</th>
                    <th>Rp @Model.Sum(i => i.Book.Price * i.Quantity).ToString("N0")</th>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="col-md-4">
        <h4>Select Payment Method</h4>
        @if (ViewBag.PaymentMethods == null || !((IEnumerable<BookStore.Models.PaymentMethod>)ViewBag.PaymentMethods).Any())
        {
            <div class="alert alert-danger">Payment methods tidak tersedia. Silahkan Hubungi AdmiN.</div>
        }
        else
        {
            <form asp-action="PlaceOrder" method="post">
                @Html.AntiForgeryToken() 
                @foreach (var pm in ViewBag.PaymentMethods as IEnumerable<BookStore.Models.PaymentMethod>)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio"
                               name="paymentMethodId"
                               value="@pm.Id"
                               id="pm_@pm.Id"
                               required />
                        <label class="form-check-label" for="pm_@pm.Id">
                            @pm.Name
                        </label>
                    </div>
                }
                <button type="submit" class="btn btn-success w-100 mt-3">Place Order</button>
            </form>
        }
    </div>
</div>