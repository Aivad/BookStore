@model List<BookStore.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
    Layout = "_AdminLayout";
    var currentPage = (int)ViewBag.Page;
    var totalPages = (int)ViewBag.TotalPages;
    var searchQuery = ViewBag.SearchQuery?.ToString() ?? "";
}

<h2>Manage Orders</h2>

<!--Search Form -->
<form asp-action="IndexOrder" method="get" class="d-flex mb-3">
    <input type="text" name="query" class="form-control me-2"
           placeholder="Order ID, User, Payment Method, atau Status..."
           value="@searchQuery" />
    <button type="submit" class="btn btn-outline-primary">Search</button>
    @if (!string.IsNullOrEmpty(searchQuery))
    {
        <a asp-action="IndexOrder" class="btn btn-outline-secondary ms-2">Clear</a>
    }
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Total</th>
                <th>Payment</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center">
                        @if (!string.IsNullOrEmpty(searchQuery))
                        {
                            <span>Tidak ada Order yang sesuai dengan "<strong>@searchQuery</strong>"</span>
                        }
                        else
                        {
                            <span>Tidak ada Order yang tersedia.</span>
                        }
                    </td>
                </tr>
            }
            else
            {
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.Id</td>
                        <td>@order.User?.UserName</td>
                        <td>Rp @order.TotalAmount.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                        <td>@order.PaymentMethod?.Name</td>
                        <td>
                            @if (order.Status == "Delivered")
                            {
                                <span class="badge bg-success">@order.Status</span>
                            }
                            else if (order.Status == "Shipped")
                            {
                                <span class="badge bg-info">@order.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@order.Status</span>
                            }
                        </td>
                        <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                        <td>
                            <a asp-action="DetailOrder" asp-route-id="@order.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Detail
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!--Pagination -->
<nav>
    <ul class="pagination mb-0">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="IndexOrder"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-query="@searchQuery">Previous</a>
            </li>
        }
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="IndexOrder"
                   asp-route-page="@i"
                   asp-route-query="@searchQuery">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="IndexOrder"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-query="@searchQuery">Next</a>
            </li>
        }
    </ul>
</nav>