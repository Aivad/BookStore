@model List<BookStore.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
    Layout = "_AdminLayout";
    var currentPage = ViewBag.Page;
    var totalPages = ViewBag.TotalPages;
}

<h2>Manage Orders</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Total</th>
                <th>Payment</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>#@order.Id</td>
                    <td>@order.User?.UserName</td>
                    <td>Rp @order.TotalAmount.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                    <td>@order.PaymentMethod?.Name</td>
                    <td>
                        @if (order.Status == "Delivered")
                        {
                            <span class="badge bg-success">@order.Status</span>
                        }
                        else if (order.Status == "Shipped")
                        {
                            <span class="badge bg-info">@order.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">@order.Status</span>
                        }
                    </td>
                    <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                    <td>
                        <a asp-action="DetailOrder" asp-route-id="@order.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination mb-0">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="IndexOrder" asp-route-page="@(currentPage - 1)">Previous</a>
            </li>
        }
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="IndexOrder" asp-route-page="@i">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="IndexOrder" asp-route-page="@(currentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>