@model List<BookStore.Models.Contact>
@{
    ViewData["Title"] = "User Messages";
    Layout = "_AdminLayout";
    var currentPage = (int)ViewBag.Page;
    var totalPages = (int)ViewBag.TotalPages;
    var searchQuery = ViewBag.SearchQuery?.ToString() ?? "";
}

<h2>📬 User Messages</h2>

<!--Search Form -->
<form asp-action="IndexContact" method="get" class="d-flex mb-3">
    <input type="text" name="query" class="form-control me-2"
           placeholder="Name, Email, atau Message..."
           value="@searchQuery" />
    <button type="submit" class="btn btn-outline-primary">Search</button>
    @if (!string.IsNullOrEmpty(searchQuery))
    {
        <a asp-action="IndexContact" class="btn btn-outline-secondary ms-2">Clear</a>
    }
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Sent At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">
                        @if (!string.IsNullOrEmpty(searchQuery))
                        {
                            <span>Tidak ditemukan pesan dengan index pencarian "<strong>@searchQuery</strong>"</span>
                        }
                        else
                        {
                            <span>Tidak ada pesan terdaftar.</span>
                        }
                    </td>
                </tr>
            }
            else
            {
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.Id</td>
                        <td>@msg.Name</td>
                        <td><a href="mailto:@msg.Email">@msg.Email</a></td>
                        <td>
                            @if (msg.Message.Length > 50)
                            {
                                @msg.Message.Substring(0, 50)
                    
                                <text>...</text>
                            }
                            else
                            {
                                @msg.Message
                            }
                        </td>
                        <td>@msg.SentAt.ToString("dd MMM yyyy HH:mm")</td>
                        <td>
                            <a asp-action="DetailContact" asp-route-id="@msg.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Detail
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!--Pagination -->
<nav>
    <ul class="pagination mb-0">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="IndexContact"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-query="@searchQuery">Previous</a>
            </li>
        }
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="IndexContact"
                   asp-route-page="@i"
                   asp-route-query="@searchQuery">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="IndexContact"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-query="@searchQuery">Next</a>
            </li>
        }
    </ul>
</nav>