@model List<BookStore.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "_AdminLayout";
    var currentPage = ViewBag.Page;
    var totalPages = ViewBag.TotalPages;
}

<h2>Manage Users</h2>

<form asp-action="DeleteUsers" method="post" id="deleteForm">
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="CreateUser" class="btn btn-success">
            <i class="bi bi-plus"></i> Create New User
        </a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete selected users?');">
            Delete Selected
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th><input type="checkbox" id="selectAll" /></th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    var role = user.UserRoles?.FirstOrDefault()?.Role?.Name ?? "User";

                    <tr>
                        <td><input type="checkbox" name="selectedIds" value="@user.Id" /></td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@role</td>
                        <td>
                            <a asp-action="DetailUser" asp-route-id="@user.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Detail
                            </a>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav>
        <ul class="pagination mb-0">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="IndexUser" asp-route-page="@(currentPage - 1)">Previous</a>
                </li>
            }
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="IndexUser" asp-route-page="@i">@i</a>
                </li>
            }
            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="IndexUser" asp-route-page="@(currentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</form>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function () {
            const checkboxes = document.querySelectorAll('input[name="selectedIds"]');
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}