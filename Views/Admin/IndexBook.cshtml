@model List<BookStore.Models.Book>
@{
    ViewData["Title"] = "Manage Books";
    Layout = "_AdminLayout";
    var currentPage = (int)ViewBag.Page;
    var totalPages = (int)ViewBag.TotalPages;
    var searchQuery = ViewBag.SearchQuery?.ToString() ?? "";
}

<h2>Manage Books</h2>

<!--Search Form -->
<form asp-action="IndexBook" method="get" class="d-flex mb-3">
    <input type="text" name="query" class="form-control me-2"
           placeholder="Title, Author, atau Category..."
           value="@searchQuery" />
    <button type="submit" class="btn btn-outline-primary">Search</button>
    @if (!string.IsNullOrEmpty(searchQuery))
    {
        <a asp-action="IndexBook" class="btn btn-outline-secondary ms-2">Clear</a>
    }
</form>

<!--Delete Form -->
<form asp-action="DeleteBooks" method="post" id="deleteForm">
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="CreateBook" class="btn btn-success">
            <i class="bi bi-plus"></i> Create New Book
        </a>
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete selected books?');">
            Delete Selected
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th><input type="checkbox" id="selectAll" /></th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center">
                            @if (!string.IsNullOrEmpty(searchQuery))
                            {
                                <span>Tidak ditemukan buku dengan pencarian "<strong>@searchQuery</strong>"</span>
                            }
                            else
                            {
                                <span>Buku tidak tersedia.</span>
                            }
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="selectedIds" value="@book.Id" /></td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>
                                @if (book.Description.Length > 100)
                                {
                                    @book.Description.Substring(0, 100) <text>...</text>
                                }
                                else
                                {
                                    @book.Description
                                }
                            </td>
                            <td>Rp @book.Price.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                            <td>@book.Stock</td>
                            <td>@book.Category?.Name</td>
                            <td>
                                <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="DetailBook" asp-route-id="@book.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Detail
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</form>

<!--Pagination -->
<nav>
    <ul class="pagination mb-0">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="IndexBook"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-query="@searchQuery">Previous</a>
            </li>
        }
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="IndexBook"
                   asp-route-page="@i"
                   asp-route-query="@searchQuery">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="IndexBook"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-query="@searchQuery">Next</a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function () {
            const checkboxes = document.querySelectorAll('input[name="selectedIds"]');
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}