@model BookStore.Models.Cart
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Cart Item";
}

<h2>Create Cart Item</h2>

<form asp-action="CreateCart" method="post">
    <div class="mb-3">
        <label class="form-label">User <span class="text-danger">*</span></label>
        <select asp-for="UserId" class="form-select" required>
            <option value="">-- Select User --</option>
            @foreach (var user in ViewData["Users"] as IEnumerable<BookStore.Models.ApplicationUser>)
            {
                <option value="@user.Id">@user.UserName (@user.Email)</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Book <span class="text-danger">*</span></label>
        <select asp-for="BookId" class="form-select" required>
            <option value="">-- Select Book --</option>
            @foreach (var book in ViewData["Books"] as IEnumerable<BookStore.Models.Book>)
            {
                <option value="@book.Id">@book.Title by @book.Author</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity <span class="text-danger">*</span></label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" max="100" value="1" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="IndexCart" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}