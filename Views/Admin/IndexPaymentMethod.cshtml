@model List<BookStore.Models.PaymentMethod>
@{
    ViewData["Title"] = "Manage Payment Methods";
    Layout = "_AdminLayout";
}

<h2>Manage Payment Methods</h2>

<form asp-action="DeletePaymentMethod" method="post" id="deleteForm">
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="CreatePaymentMethod" class="btn btn-success">
            <i class="bi bi-plus"></i> Create New Payment Method
        </a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete selected payment methods?');">
            Delete Selected
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th><input type="checkbox" id="selectAll" /></th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var method in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedIds" value="@method.Id" /></td>
                        <td>@method.Name</td>
                        <td>
                            <a asp-action="EditPaymentMethod" asp-route-id="@method.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function () {
            const checkboxes = document.querySelectorAll('input[name="selectedIds"]');
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}