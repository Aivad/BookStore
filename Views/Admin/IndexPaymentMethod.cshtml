@model List<BookStore.Models.PaymentMethod>
@{
    ViewData["Title"] = "Manage Payment Methods";
    Layout = "_AdminLayout";
    var currentPage = (int)ViewBag.Page;
    var totalPages = (int)ViewBag.TotalPages;
    var searchQuery = ViewBag.SearchQuery?.ToString() ?? "";
}

<h2>Manage Payment Methods</h2>

<!--Search Form -->
<form asp-action="IndexPaymentMethod" method="get" class="d-flex mb-3">
    <input type="text" name="query" class="form-control me-2"
           placeholder="Payment Method..."
           value="@searchQuery" />
    <button type="submit" class="btn btn-outline-primary">Search</button>
    @if (!string.IsNullOrEmpty(searchQuery))
    {
        <a asp-action="IndexPaymentMethod" class="btn btn-outline-secondary ms-2">Clear</a>
    }
</form>

<!--Delete Form -->
<form asp-action="DeletePaymentMethod" method="post" id="deleteForm">
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="CreatePaymentMethod" class="btn btn-success">
            <i class="bi bi-plus"></i> Create New Payment Method
        </a>
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete selected payment methods?');">
            Delete Selected
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th><input type="checkbox" id="selectAll" /></th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center">
                            @if (!string.IsNullOrEmpty(searchQuery))
                            {
                                <span>No payment methods found matching "<strong>@searchQuery</strong>"</span>
                            }
                            else
                            {
                                <span>No payment methods available.</span>
                            }
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var method in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="selectedIds" value="@method.Id" /></td>
                            <td>@method.Name</td>
                            <td>
                                <a asp-action="EditPaymentMethod" asp-route-id="@method.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</form>

<!--Pagination -->
<nav>
    <ul class="pagination mb-0">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="IndexPaymentMethod"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-query="@searchQuery">Previous</a>
            </li>
        }
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="IndexPaymentMethod"
                   asp-route-page="@i"
                   asp-route-query="@searchQuery">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="IndexPaymentMethod"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-query="@searchQuery">Next</a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function () {
            const checkboxes = document.querySelectorAll('input[name="selectedIds"]');
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}